<div class="background-image-bar-new">
	<div class="background-color-bar-new">
    	<div class="container">
    		<div class="row">
        		<div class="col s3">
          			<h5 class="user-title">投稿一覧</h5>
          			<div class="border"></div>
        		</div>
      		</div>
      		<div class="row">
      			<div class="col s8 offset-s2">

      					<% @posts.each do |post| %>
      						<div class="col s12 bar-show-box">
      							<div class="col s5 bar-show-user">
      								<div class=" col s12 bar-show-post-destroy">
      									<%= link_to "削除する", post_path(post), method: :delete, "data-confirm" => "本当に消しますか？",class:"col s3 offset-s1 waves-effect waves-light btn-small #b71c1c red darken-4" %>
      								</div>
      								<div class="bar-show-post-image">
      									<%= attachment_image_tag post, :image, :fill, 130, 130, format: 'jpg', fallback: "bar_no_image.png" %>
      								</div>
      							</div>
      							<div class="col s7 bar-show-post-date">
      								<u>投稿日時</u>：<%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
      								<div class="bar-show-post-title">
      									<u>件名</u>：<%= post.title %>
      								</div>
      								<div class="bar-show-post-title">
      									<u>内容</u>：<%= post.body %>
      								</div>
      							</div>
      						</div>
      					<% end %>
      			</div>
	    	</div>
    	</div>
  	</div>
</div>
