<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="notification-index-box-comment">
  <div class="row"style="margin-bottom: 0;">
    <div class="col s1 offset-s1 ">
      <%= attachment_image_tag visitor, :image, :fill, 30, 30, format: 'jpg', fallback: "bar_no_image.png", size:'40x40',class:"notification-user-image" %>
    </div>
    <div class="col s4 notification-user-name">
      <%= link_to(user_path(visitor)) do %>
        <span><%= visitor.name %></span>
      <% end %>さんが
    </div>
    <div class="col s4 offset-s2">
      <span><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
    </div>
  </div>
  <div class="row"style="margin-bottom: 0;">
    <div class="col s10 offset-s2">
    	<%== notification_form(notification) %>
    </div>
  </div>
  <div class="row"style="margin-bottom: 0;">
    <% if !@comment.nil? %>
      <div class="notification-comment-border"></div>
      <p class="col s10 offset-s2"><b><%= @comment %></b></p>
    <% end %>
  </div>
</div>