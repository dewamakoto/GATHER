<div class="background-image-notification-index"style="background-image:url(<%= asset_path "sign_in.jpg" %>)" />
	<div class="background-color-notification-index">
    	<div class="container">
      		<div class="row">
      			<div class="col s3">
          			<h5 class="user-title">通知</h5>
          			<div class="border"></div>
        		</div>
        	</div>
        	<div class="row"style="margin-bottom:0;">
      			<div class="col s6 offset-s3 notification-index">
					<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
					<div>
						<% if notifications.exists? %>
							<%= render notifications %>
							<%= paginate @notifications, class: "paginate ,#546e7a blue-grey darken-1" %>
						<% else %>
							<div class="notification-index-box-comment">
								通知はありません
								<div class="notification-none-blank"></div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
