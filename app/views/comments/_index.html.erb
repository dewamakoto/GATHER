<% if comments.any? %>
	<% comments.each do |comment| %>
		<div class="col s12 bar-show-box-comment-index">
			<div class="row">
				<div class="col s4">
		        	<storng><u>投稿者</u>：<%= comment.user.name %></strong><br>
		    	</div>
		    	<div class="col s4">
		        	<storng><%= comment.created_at.strftime("%m月%d日 %H時%M分") %></strong><br>
		    	</div>
		    	<% if user_signed_in? && comment.user == current_user %>
	        		<div class="bar-show-comment-delete"><%= link_to '削除', comment_path(comment), method: :delete,remote: true,"data-confirm" => "本当に消しますか？",class:"col s2  offset-s1 btn btn-small #b71c1c red darken-4 bar-show-comment-delete" %>
		        	</div>
	      		<% end %>
	      	</div>
	      	<div class="row">
	      		&emsp;&emsp;&emsp;&emsp;<%= comment.body %>
	   		</div>
	   	</div>
	<% end %>
<% else %>
	<div class="col s12 bar-show-box-comment-none">
		<div><b>まだコメントはありません</b></div>
	</div>
<% end %>