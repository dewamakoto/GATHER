<div class="background-image-bar-new">
	<div class="background-color-bar-new">
    	<div class="container">
    		<div class="row">
        		<div class="col s3">
          			<h5 class="user-title">店舗新規登録</h5>
          			<div class="border"></div>
        		</div>
      		</div>
      		<div class="row">
      			<div class="col s8 offset-s2 bar-new-box">
      				<%= form_for (@bar) do |f| %>
      					<div class="col s4 offset-s4 bar-new-image">
      						<%= attachment_image_tag @bar, :image_id, :fill, 300, 300, format: 'jpg', fallback: "bar_no_image.png" %>
            				<%= f.attachment_field :image %>
      					</div>
      					<div class="bar-new-name col s4 offset-s4">
       						<%= f.label :店名, class: "float-left" %><br>
							<%= f.text_field :name, class: "col-auto form-control form-control-lg w-100" %>
						</div>
						<div class="col s4 offset-s4">
       						<%= f.label :ジャンル, class: "float-left" %><br>
							<%= f.text_field :category, class: "col-auto form-control form-control-lg w-100" %>
						</div>
						<div class="col s4 offset-s4">
       						<%= f.label :住所, class: "float-left" %><br>
							<%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
						</div>
						<div class="col s4 offset-s4">
       						<%= f.label :普段観戦しているスポーツ, class: "float-left" %><br>
							<%= f.text_field :sports, class: "col-auto form-control form-control-lg w-100" %>
						</div>
						<div class="col s4 offset-s4">
       						<%= f.label :お店の紹介文, class: "float-left" %><br>
							<%= f.text_area :body, class: "col-auto form-control form-control-lg w-100" %>
						</div>
						<div class="bar-new-registration col s4 offset-s5">
							<%= f.submit "登録する", class:"col-xs-4 col-xs-offset-4 btn btn-primary" %>
						</div>
					<% end %>
        		</div>
    		</div>
    	</div>
  	</div>
</div>
