<div class="background-image-bar-new">
	<div class="background-color-bar-new">
    	<div class="container">
    		<div class="row">
        		<div class="col s3">
          			<h5 class="user-title"><%= @bar.name %></h5>
          			<div class="border"></div>
        		</div>
      		</div>
      		<div class="row">
      			<div class="col s4 bar-show-box">
      				<div class="bar-show-image">
      					<%= attachment_image_tag @bar, :image, :fill, 150, 150, format: 'jpg', fallback: "bar_no_image.png" %>
      				</div>
      				<div>
      					<h8><u>住所</u></h8><br>
      					<h6><b><%= @bar.address %></b></h6>
      				</div>
      				<div class="bar-show-category">
      					<h8><u>ジャンル</u></h8><br>
      					<h6><b><%= @bar.category %></b></h6>
      				</div>
      				<div class="bar-show-body">
      					<h8><u>紹介文</u></h8><br>
      					<h6><b><%= @bar.body %></b></h6>
      				</div>
      			</div>
      			<div class="col s5 offset-s1">
      				<% if user_signed_in? %>
      					<div class="bar-post">
      						<%= link_to "新規投稿する", new_post_path, class: "btn btn-success mx-auto btsn-lg" %>
      					</div>
      				<% end %>
      			</div>
	    	</div>
    	</div>
  	</div>
</div>