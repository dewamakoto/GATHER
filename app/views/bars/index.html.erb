<div class="background-image-bar-index">
	<div class="background-color-bar-index">
    	<div class="container">
    		<div class="row">
        		<div class="col s3">
          			<h5 class="user-title">店名検索</h5>
          			<div class="border"></div>
        		</div>
      		</div>
      		<div class="row">
	      		<%= search_form_for @search do |f| %>
	  				<%= f.search_field :name_or_sports_or_address_cont, class:"col s4 offset-s4 bar-index-search", placeholder: '店名・住所・スポーツ名のいずれかを入力' %>
					<%= f.submit ' 検索する', class: "btn btn-primary" %>
			 	<% end %>
				<div class="col s12 bar-index-box">
	    			<% if @bar_result.any? %>
						<table class="highlight">
				 			<thead class="thead-light">
				 				<tr>
				 					<th>写真</th>
					 				<th>店名</th>
					 				<th>ジャンル</th>
					 				<th>普段観戦している<br>スポーツ名</th>
					 				<th>住所</th>
									<th>最終更新日</th>
				 				</tr>
				 			</thead>
					 		<% @bar_result.each do |bar| %>
					 			<tbody>
									<tr>
				 						<td><%= attachment_image_tag bar, :image, :fill, 90, 90, format: 'jpg', fallback: "bar_no_image.png" %></td>
					 					<td><%= link_to(bar_path(bar)) do %>
												<div><%= bar.name %></div>
											<% end %>
										</td>
					 					<td><%= bar.category %></td>
					 					<td><%= bar.sports %></td>
					 					<td><%= bar.address %></td>
					 					<td><%= bar.updated_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
					 				</tr>
							<% end %>
				 				</tbody>
				 		</table>
					<% else %>
				 		<h6>お店が見つかりません。キーワードを変えてください。</h6>
				 	<% end %>
	    		</div>
	    	</div>
    	</div>
  	</div>
</div>
